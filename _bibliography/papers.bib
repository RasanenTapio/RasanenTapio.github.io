	year = {2022},
	keywords = {Child-care subsidies, Family policy, Gender equality, J13, J16, J18, J22, Maternal labor supply},
	pages = {1071--1101},
	altmetric = {104774446},
	selected={true}
}


@techreport{mesiaislehto_gendered_2022,
